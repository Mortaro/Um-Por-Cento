      = label_tag :nome
      = text_field_tag :nome
      = label_tag :email
      = text_field_tag :email
      = label_tag :mensagem
      = text_area_tag :mensagem
      = submit_tag 'Enviar :)', data: {message: 'Sua mensagem est√° sendo enviada...'}
    = text_for 'Contato'
