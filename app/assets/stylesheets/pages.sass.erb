$cyan:  #12d9e1

*
  margin: 0
  padding: 0
  font-family: "Gotham Book", sans-serif
  font-size: 14px
  box-sizing: border-box

a
  text-decoration: none
  color: #fff
  font-weight: bolder
  &:hover
    color: $cyan
    text-decoration: line-through

li
  list-style: none

@import url(http://fonts.googleapis.com/css?family=Amatic+SC:400,700)

@font-face
  font-family: 'Gotham Bold'
  src: url('gotham-bold-webfont.eot')
  src: url('gotham-bold-webfont.eot?#iefix') format('embedded-opentype'), url('gotham-bold-webfont.woff2') format('woff2'), url('gotham-bold-webfont.woff') format('woff'), url('gotham-bold-webfont.ttf') format('truetype'), url('gotham-bold-webfont.svg#gotham_boldregular') format('svg')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Gotham Book'
  src: url('gotham-book-webfont.eot')
  src: url('gotham-book-webfont.eot?#iefix') format('embedded-opentype'), url('gotham-book-webfont.woff2') format('woff2'), url('gotham-book-webfont.woff') format('woff'), url('gotham-book-webfont.ttf') format('truetype'), url('gotham-book-webfont.svg#gotham_bookregular') format('svg')
  font-weight: normal
  font-style: normal

#blur
  position: fixed
  top: 0
  left: 0
  width: 100%
  bottom: 0
  background: url(<%= asset_path 'blur-background.png' %>)
  opacity: 0.4
  display: none
  z-index: 888
#navigation
  z-index: 999
  @media (min-width: 560px)
    position: fixed
    bottom: 0
    top: 0
    left: 0
  @media (max-width: 560px)
    float: left
    width: 100%
  text-align: center
  nav
    @media (min-width: 560px)
      padding-top: 40px
    @media (max-width: 560px)
      padding-top: 200px
    float: left
    background: hsla(0,0,0,0.9)
    height: 100%
    @media (max-width: 560px)
      width: 100%
    @media (min-width: 560px)
      width: 320px
    #bird
      width: 100%
      height: 101px
      position: relative
      span
        position: absolute
        top: 0
        left: 0
        height: 101px
        width: 100%
      span:first-of-type
        background: url(<%= asset_path('bird-sprite.png') %>) no-repeat center 0
        z-index: 9
      span:last-of-type
        background: url(<%= asset_path('bird-sprite.png') %>) no-repeat center -111px
    ul
      a
        font-size: 18px
        text-transform: uppercase
        line-height: 32px
    ul:first-of-type
      &:before, &:after
        content: ""
        background: url(<%= asset_path('dotted-row.png') %>) no-repeat center
        height: 7px
        width: 100%
        display: block
        margin: 20px 0
      a
        font-family: "Amatic SC", cursive
        font-size: 30px
        line-height: 51px
        &:after
          content: "?"
          font-weight: normal
          font-size: 30px
    ul:last-of-type
      width: 100%
      margin: 40px 0
      li
        display: inline-block
        a
          width: 23px
          height: 24px
          background: url(<%= asset_path('social-sprite.png') %>)
          display: block
          overflow: hidden
          text-indent: -999px
          transition: all .3s
          &:hover
            background-position-y: -30px
      li:nth-child(2)
        a
          background-position-x: 88px
      li:nth-child(4)
        a
          background-position-x: 54px
      li:nth-child(5)
        a
          background-position-x: 23px
  aside
    @media (max-width: 560px)
      position: fixed
      top: 40px
      left: 50%
      margin-left: -107px
    @media (min-width: 560px)
      margin: 20px 0 0 20px
      float: left
    a
      float: left
      width: 106px
      height: 105px
      display: block
      transition: al .3s
    a:first-of-type
      background: $cyan
      position: relative
      span
        position: absolute
        top: 50px
        left: 30%
        display: block
        width: 40%
        height: 6px
        background: #fff
        transition: all .3s
        &:after, &:before
          content: ""
          display: block
          background: white
          height: 100%
          width: 100%
          position: relative
          transition: all .3s
          transform-origin: 50% 50%
        &:before
          top: -14px
        &:after
          bottom: -8px
      &:hover
        span
          background: transparent
          &:after
            transform: rotate(-90deg) translate(14px, 0)
          &:before
            transform: translate(0, 14px)
      &.active
        span
          background: transparent
          &:before
            transform: rotate(45deg) translate(10px, 10px)
          &:after
            transform: rotate(-45deg) translate(10px, -10px)
        &:hover
          opacity: 0.8
    a:last-of-type
      &:hover
        background: #000
        padding: 3px 5px 0 3px
        img
          height: 100px

#clock
  position: relative
  width: 204px
  height: 205px
  span
    background: url(<%= asset_path('clock-sprite.png') %>) no-repeat
    position: absolute
    transition: all 2s
  .frame
    width: 204px
    height: 205px
    top: 0
    left: 0
  .hour
    width: 10px
    height: 14px
    background-position: 0 -297px
    &.hour-1, &.hour-2, &.hour-3, &.hour-4, &.hour-5, &.hour-6
      top: 90px
      left: 70px
      display: block
    &.hour-7, &.hour-8, &.hour-9, &.hour-10, &.hour-11, &.hour-12
      top: 120px
      left: 120px
      display: block
  .hours
    width: 28px
    height: 45px
    top: 105px
    left: 80px
    background-position: 0 -224px
  .minutes
    width: 50px
    height: 26px
    top: 77px
    left: 85px
    background-position: -154px -224px
    transform: rotate(-45deg)
  .seconds
    width: 41px
    height: 42px
    top: 77px
    left: 85px
    background-position: -168px -274px
    transform: rotate(-110deg)
  &.active
    .hours
      transform: rotate(158deg) translate(-20px, 34px)
    .minutes
      transform: rotate(2deg) translate(14px, 15px)
    .seconds
      transform: rotate(0deg) translate(11px, 33px)
    .hour-1
      left: 140px
      top: 34px
    .hour-2
      left: 166px
      top: 62px
    .hour-3
      left: 176px
      top: 99px
    .hour-4
      left: 163px
      top: 137px
    .hour-5
      left: 135px
      top: 165px
    .hour-6
      left: 97px
      top: 177px
    .hour-7
      left: 58px
      top: 163px
    .hour-8
      left: 31px
      top: 136px
    .hour-9
      left: 21px
      top: 97px
    .hour-10
      left: 30px
      top: 59px
    .hour-11
      left: 59px
      top: 31px
    .hour-12
      left: 98px
      top: 22px

.center
  @media (min-width: 1170px)
    width: 1170px
  @media (max-width: 1170px)
    width: 100%
  margin: 0 auto

.dotted-background
  background: #021c1d url(<%= asset_path('dotted-bg.png') %>) repeat center fixed
  padding: 90px 10px
  width: 100%
  float: left
  color: #fff

#intro-slider
  background: darken($cyan, 20%)
  width: 100%
  float: left

#comumcc
  float: left
  width: 100%
  padding: 90px 10px
  text-align: center
  h2
    color: $cyan
    margin-bottom: 40px
    font-size: 30px
    background: url(<%= asset_path('comum-background.png') %>) no-repeat center bottom
    padding-bottom: 20px
  .blue-circle
    opacity: 0.8
    margin: 0 -10px
    background: $cyan
    display: inline-block
    border-radius: 100%
    width: 300px
    height: 300px
    transition: all 1s
    cursor: pointer
    position: relative
    h3, ul
      position: absolute
      width: 300px
      height: 300px
      transition: all 1s
    h3
      text-transform: uppercase
      line-height: 300px
    ul
      opacity: 0
      padding-top: 77px
    &:hover
      background: darken($cyan, 10%)
      box-shadow: rgba(0,0,0,0.5) 0 0 74px inset
      ul
        display: block
        opacity: 1
      h3
        opacity: 0
        display: none
  &.active
    .blue-circle
      margin: 0 20px

#time-percentage
  text-align: center
  h2
    color: #fff
    font-size: 5em
    font-family: "Amatic SC", cursive
    display: inline-block
  h3
    &:first-of-type
      margin-top: 40px
    &:last-of-type
      color: $cyan
  p
    em
      margin-left: 5px
      transition: all 2s
      opacity: 0.8
      &.active
        opacity: 1
        text-shadow: #fff 0 0 3px
  h3, h2, p
    padding: 30px 0 0 0
    opacity: 0
    transition: all 2s
  #clock
    display: inline-block
  &.active
    h2
      opacity: 1
      margin: 0 10px
    h3, p
      opacity: 1
      padding: 0 0 30px 0

footer
  padding: 50px 0
  background: #021c1d
  color: white
  width: 100%
  float: left
  p
    float: right
    a
      margin: 0 5px
  @media (max-width: 700px)
    line-height: 25px
    text-align: center
    p
      width: 100%
