$cyan:  #12d9e1

*
  margin: 0
  padding: 0
  font-family: "Gotham Book", sans-serif
  font-size: 14px
  box-sizing: border-box

a
  text-decoration: none
  color: #fff
  font-weight: bolder
  &:hover
    color: $cyan
    text-decoration: line-through

li
  list-style: none

@import url(http://fonts.googleapis.com/css?family=Amatic+SC:400,700)

@font-face
  font-family: 'Gotham Bold'
  src: url('gotham-bold-webfont.eot')
  src: url('gotham-bold-webfont.eot?#iefix') format('embedded-opentype'), url('gotham-bold-webfont.woff2') format('woff2'), url('gotham-bold-webfont.woff') format('woff'), url('gotham-bold-webfont.ttf') format('truetype'), url('gotham-bold-webfont.svg#gotham_boldregular') format('svg')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Gotham Book'
  src: url('gotham-book-webfont.eot')
  src: url('gotham-book-webfont.eot?#iefix') format('embedded-opentype'), url('gotham-book-webfont.woff2') format('woff2'), url('gotham-book-webfont.woff') format('woff'), url('gotham-book-webfont.ttf') format('truetype'), url('gotham-book-webfont.svg#gotham_bookregular') format('svg')
  font-weight: normal
  font-style: normal

#blur
  position: fixed
  top: 0
  left: 0
  width: 100%
  bottom: 0
  background: url(<%= asset_path 'blur-bg.png' %>)
  opacity: 0.4
  display: none
  z-index: 888
#navigation
  z-index: 999999
  @media (min-width: 560px)
    position: fixed
    top: 0
    left: 0
    height: 100%
  @media (max-width: 560px)
    float: left
    width: 100%
  text-align: center
  nav
    @media (min-width: 560px)
      padding-top: 40px
      width: 320px
    @media (max-width: 560px)
      padding-top: 200px
      width: 100%
    float: left
    background: hsla(0,0,0,0.9)
    height: 100%
    position: relative
    #bird
      width: 100%
      height: 101px
      position: relative
      span
        position: absolute
        top: 0
        left: 0
        height: 101px
        width: 100%
      span:first-of-type
        background: url(<%= asset_path('bird-sprite.png') %>) no-repeat center 0
        z-index: 9
      span:last-of-type
        background: url(<%= asset_path('bird-sprite.png') %>) no-repeat center -111px
    ul
      a
        font-size: 18px
        text-transform: uppercase
        line-height: 32px
    ul:first-of-type
      &:before, &:after
        content: ""
        background: url(<%= asset_path('dotted-row.png') %>) no-repeat center
        height: 7px
        width: 100%
        display: block
        margin: 20px 0
      a
        font-family: "Amatic SC", cursive
        font-size: 30px
        line-height: 51px
        &:after
          content: "?"
          font-weight: normal
          font-size: 30px
    ul:last-of-type
      width: 100%
      @media (min-width: 560px)
        position: absolute
        bottom: 20px
        left: 0
      @media (max-width: 560px)
        margin: 40px 0
  aside
    @media (max-width: 560px)
      position: fixed
      top: 40px
      left: 50%
      margin-left: -107px
    @media (min-width: 560px)
      position: absolute
      top: 20px
      right: -232px
    z-index: 9999
    a
      float: left
      width: 106px
      height: 105px
      display: block
      transition: al .3s
    a:first-of-type
      background: $cyan
      position: relative
      span
        position: absolute
        top: 50px
        left: 30%
        display: block
        width: 40%
        height: 6px
        background: #fff
        transition: all .3s
        &:after, &:before
          content: ""
          display: block
          background: white
          height: 100%
          width: 100%
          position: relative
          transition: all .3s
          transform-origin: 50% 50%
        &:before
          top: -14px
        &:after
          bottom: -8px
      &:hover
        span
          background: transparent
          &:after
            transform: rotate(-90deg) translate(14px, 0)
          &:before
            transform: translate(0, 14px)
      &.active
        span
          background: transparent
          &:before
            transform: rotate(45deg) translate(10px, 10px)
          &:after
            transform: rotate(-45deg) translate(10px, -10px)
        &:hover
          opacity: 0.8
    a:last-of-type
      &:hover
        background: #000
        padding: 3px 5px 0 3px
        img
          height: 100px

#clock
  position: relative
  width: 204px
  height: 205px
  span
    background: url(<%= asset_path('clock-sprite.png') %>) no-repeat
    position: absolute
    transition: all 2s
  .frame
    width: 204px
    height: 205px
    top: 0
    left: 0
  .hour
    width: 10px
    height: 14px
    background-position: 0 -297px
    &.hour-1, &.hour-2, &.hour-3, &.hour-4, &.hour-5, &.hour-6
      top: 90px
      left: 70px
      display: block
    &.hour-7, &.hour-8, &.hour-9, &.hour-10, &.hour-11, &.hour-12
      top: 120px
      left: 120px
      display: block
  .hours
    width: 28px
    height: 45px
    top: 105px
    left: 80px
    background-position: 0 -224px
  .minutes
    width: 50px
    height: 26px
    top: 77px
    left: 85px
    background-position: -154px -224px
    transform: rotate(-45deg)
  .seconds
    width: 41px
    height: 42px
    top: 77px
    left: 85px
    background-position: -168px -274px
    transform: rotate(-110deg)
  &.active
    .hours
      transform: rotate(158deg) translate(-20px, 34px)
    .minutes
      transform: rotate(2deg) translate(14px, 15px)
    .seconds
      transform: rotate(0deg) translate(11px, 33px)
    .hour-1
      left: 140px
      top: 34px
    .hour-2
      left: 166px
      top: 62px
    .hour-3
      left: 176px
      top: 99px
    .hour-4
      left: 163px
      top: 137px
    .hour-5
      left: 135px
      top: 165px
    .hour-6
      left: 97px
      top: 177px
    .hour-7
      left: 58px
      top: 163px
    .hour-8
      left: 31px
      top: 136px
    .hour-9
      left: 21px
      top: 97px
    .hour-10
      left: 30px
      top: 59px
    .hour-11
      left: 59px
      top: 31px
    .hour-12
      left: 98px
      top: 22px

.center
  @media (min-width: 1170px)
    width: 1170px
  @media (max-width: 1170px)
    width: 100%
  margin: 0 auto

.dotted-background
  background: #021c1d url(<%= asset_path('dotted-bg.png') %>) repeat center fixed
  padding: 90px 10px
  width: 100%
  float: left
  color: #fff

#intro-slider
  position: relative
  background: darken($cyan, 20%)
  width: 100%
  float: left
  .cycle-slideshow
    height: 100%
    overflow: hidden
    .slide-dots
      background: url(<%= asset_path('dotted-bg.png') %>) repeat center
      width: 100%
      height: 100%
      position: absolute
      top: 0
      left: 0
      z-index: 9999
    .slide
      background-size: 100% auto
      background-position: center center
      transition: all 6s
      position: absolute
      top: 0
      left: 0
      bottom: 0
      width: 100%
      overflow: hidden
      h4
        opacity: 0
        position: absolute
        right: -50px
        background: hsla(0,0,0,0.8)
        color: #fff
        padding: 10px 40px 10px 20px
        font-size: 22px
        &:first-of-type
          bottom: 100px
          transition: all 2s
        &:last-of-type
          bottom: 50px
          transition: all 3s
      &.cycle-slide-active
        background-size: 101% auto
        h4
          right: 0
          opacity: 1
    ul
      position: absolute
      bottom: 50px
      left: 50px
      z-index: 120
      list-style: none
      line-height: 1.2em
      font-weight: bold
      li
        color: transparent
        font-family: "Amatic SC", cursive
        position: relative
        line-height: 30px
        padding-left: 10px
        cursor: pointer
        text-transform: uppercase
        font-size: 20px
        &:before
          transition: all .5s
          cursor: pointer
          content: ""
          display: block
          border: 2px solid transparent
          border-radius: 50%
          position: absolute
          width: 22px
          height: 22px
          left: -27px
          top: 3px
          background: white
          transform: scale(.35)
        &:hover
          color: #fff !important
          &:before
            border-color: #fff
            background: transparent
            transform: scale(0.7)
        &.cycle-pager-active
          color: #fff
          &:before
            border-color: #fff
            background: #fff
            transform: scale(0.7)

#comumcc
  float: left
  width: 100%
  padding: 190px 10px 90px
  text-align: center
  position: relative
  @media (min-width: 1000px)
    &:before
      content: ''
      width: 100%
      background: $cyan url(<%= asset_path('dotted-bg.png') %>) repeat center fixed
      height: 100px
      display: block
      position: absolute
      top: 0
      left: 0
  a
    color: $cyan
    margin-bottom: 40px
    font-size: 30px
    padding-bottom: 20px
    display: block
    background: url(<%= asset_path('comum-bg.png') %>) no-repeat center bottom
    margin-top: 30px
    font-family: "Amatic SC", cursive
    font-weight: normal
  .circle-clear
    width: 100%
    display: inline-block
    height: 65px
    @media (min-width: 1000px)
      display: none
  .blue-circle
    color: #fff
    opacity: 0.8
    margin: 0 -30px
    background: $cyan
    display: inline-block
    border-radius: 100%
    width: 340px
    height: 340px
    transition: all 1s
    cursor: pointer
    position: relative
    ul
      height: 340px
      width: 340px
      vertical-align: middle
      display: table-cell
      li
        font-size: 20px
        line-height: 28px
    h3
      text-transform: uppercase
      font-family: "Amatic SC", cursive
      font-size: 30px
      position: absolute
      top: -155px
      left: 0
      width: 100%
      @media (max-width: 1000px)
        color: $cyan
        top: -55px
    &:hover
      background: darken($cyan, 10%)
      box-shadow: rgba(0,0,0,0.5) 0 0 74px inset
      h3
        text-decoration: line-through
  &.active
    .blue-circle
      margin: 0 -10px

#time-percentage
  text-align: center
  #clock-wrapper
    display: inline-block
    #clock, h2
      @media (min-width: 980px)
        float: left
  h2
    color: #fff
    font-size: 5em
    font-family: "Amatic SC", cursive
    display: inline-block
    margin: 30px 50px
    @media (max-width: 980px)
      width: 100%
  h3
    font-family: "Amatic SC", cursive
    &:first-of-type
      margin-top: 20px
      font-size: 30px
    &:last-of-type
      color: $cyan
      font-size: 38px
  p
    margin-top: 20px
    font-size: 18px
    line-height: 30px
    em
      font-size: 18px
      margin-left: 5px
      transition: all 2s
      opacity: 0.8
      &.active
        opacity: 1
        text-shadow: #fff 0 0 3px
  h3, h2, p
    padding: 10px 0 0 0
    opacity: 0
    transition: all 2s
  #clock
    display: inline-block
  &.active
    h2
      opacity: 1
      margin: 30px
      @media (max-width: 980px)
        margin: 30px 0
    h3, p
      opacity: 1
      padding: 0 0 10px 0

footer
  padding: 50px 0
  background: #021c1d
  color: white
  width: 100%
  float: left
  ul
    float: left
    margin-top: -4px
    li
      margin-right: 5px
  p
    float: right
    a
      margin: 0 5px
  @media (max-width: 980px)
    line-height: 25px
    text-align: center
    p
      width: 100%
    ul
      width: 100%

footer ul, #navigation nav ul:last-of-type
  li
    display: inline-block
    a
      width: 23px
      height: 24px
      background: url(<%= asset_path('social-sprite.png') %>)
      display: block
      overflow: hidden
      text-indent: -999px
      transition: all .3s
      &:hover
        background-position-y: -30px
    &:nth-child(2)
      a
        background-position-x: -33px
    &:nth-child(3)
      a
        background-position-x: -128px
    &:nth-child(4)
      a
        background-position-x: -66px
    &:nth-child(5)
      a
        background-position-x: -99px
